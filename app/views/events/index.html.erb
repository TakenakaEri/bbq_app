<div class="header">
  <div class="container">
    <h1>🍖 BBQアプリ</h1>
    <p>みんなで楽しむバーベキューイベント</p>
  </div>
</div>

<div class="container">
  <% @events.each do |event| %>
    <!-- アイキャッチ・イベント詳細 -->
    <div class="hero-section">
      <div class="hero-image">🔥</div>
      
      <div class="event-details">
        <h2 class="event-title"><%= event.name %></h2>
        
        <div class="event-info">
          <div class="info-item">
            <span class="info-icon">📅</span>
            <div class="info-content">
              <strong>日時</strong>
              <%= event.date.strftime('%Y年%m月%d日（%a） %H:%M〜') %>
            </div>
          </div>
          
          <div class="info-item">
            <span class="info-icon">📍</span>
            <div class="info-content">
              <strong>場所</strong>
              <%= event.location %>
              <% if event.latitude && event.longitude %>
                <br>
                <%= link_to "GoogleMapで見る →", 
                    "https://maps.google.com/?q=#{event.latitude},#{event.longitude}", 
                    target: "_blank", class: "map-link" %>
              <% end %>
            </div>
          </div>
          
          <div class="info-item">
            <span class="info-icon">👥</span>
            <div class="info-content">
              <strong>参加者</strong>
              <%= event.users.count %>名参加予定
            </div>
          </div>
          
          <div class="info-item">
            <span class="info-icon">💡</span>
            <div class="info-content">
              <strong>概要</strong>
              <%= event.description %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- 参加者一覧 -->
    <div class="participants-section">
      <h3 class="section-title">参加者一覧</h3>
      <div class="participants-grid">
        <% event.users.each do |user| %>
          <%= link_to user_path(user), class: "participant-card" do %>
            <div class="avatar">
              <% if user.avatar.attached? %>
                <%= image_tag user.avatar, alt: user.name %>
              <% else %>
                <%= user.name.first %>
              <% end %>
            </div>
            <h4 class="participant-name"><%= user.name %></h4>
            <span class="participant-job"><%= user.job || "未設定" %></span>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>